{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmitOnError": true,
        "lib": ["es2021"],
        "strict": true,  
        "esModuleInterop": false,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/index.ts",
        "./node_modules/**/*"
    ]
}