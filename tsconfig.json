{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": [ "dom", "esnext", "es5", "es6" ],
        "strict": true,  
        "esModuleInterop": false,
        "outDir": "./dist",
        "rootDir": "./src",
		"baseUrl": "./src",
        "typeRoots": [ "./src/index.d.ts" ],
		"paths": {
			"@config": [ "config.ts" ],
			"@types": [ "types.ts" ],
			"@language/*": [ "language/*" ],
			"@converters/*": [ "utils/converters/*" ],
			"@formatters/*": [ "utils/formatters/*" ],
			"@generators/*": [ "utils/generators/*" ],
			"@globals/*": [ "utils/globals/*" ],
			"@validators/*": [ "utils/validators/*" ],
		},
    },
    "include": [ "./src/index.ts" ],
    "exclude": [ "./node_modules/**/*", "./dist/**/*", "./build/**/*" ]
}